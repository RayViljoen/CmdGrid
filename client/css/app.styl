// Example Stylus file

body, html
	margin 0
	padding 0

body
	font normal 1em sans-serif
	background #777

.container
	padding 0
	margin 0

header
	height 50px
	background #444

#canvas
	background black url('/images/loader.gif') center center no-repeat
	border 2px solid #222
	width 1000px
	height 600px
	margin 15px auto 0
	padding 0
	position relative

	.toggleGrid, input.cmd, .move button
		position absolute
		font-size 14px
		z-index 999999
		background #555
		color #fff
		border 2px #333 solid
		outline none
		padding 10px 15px

	.toggleGrid
		top 7px
		right 10px
		width 100px

		&:active
			background #333

	input.cmd
		top 7px
		left 10px
		width 400px
		

		&.disabled
			background #222

	.move
		position absolute
		width 100px
		height 100px
		padding 0
		top 60px
		right 10px
		
		button
			width 50px
			height 50px
			&:active
				background #333

		button.n
			top 0px
			right 0px
		
		button.w
			top 0px
			left 0px
		
		button.e
			bottom 0px
			right 0px

		button.s
			bottom 0px
			left 0px